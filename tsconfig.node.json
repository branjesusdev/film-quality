{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@domain/*": ["src/app/domain/*"],
      "@infra/*": ["src/app/infrastructure/*"],
      "@aplication/*": ["src/app/aplication/*"],
    },
  },
  "include": ["src/**/*", "**/*.ts", "**/*.d.ts"],
}
